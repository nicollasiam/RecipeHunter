<h1>Searching for <%= @keyword %></h1>

<% if @recipes.nil? %>

<p>No recipes found with relevant information... Sorry :(</p>

<% else %>

<table border="1">

	<tr>
		<th>Image</th>
		<th>Recipe Title</th>
		<th>Social Rank</th>
	</tr>

	<% @recipes.each do |recipe| %>
	<tr>
		<td><%= link_to(image_tag(recipe["image_url"], width: "100", height: "100"), recipe["source_url"]) %></td>
		<td><%= link_to(sanitize(recipe["title"]), recipe["source_url"]) %></td>
		<td><%= recipe["social_rank"] %></td>
	</tr>
	<% end %>
	
</table>

<% end %>
